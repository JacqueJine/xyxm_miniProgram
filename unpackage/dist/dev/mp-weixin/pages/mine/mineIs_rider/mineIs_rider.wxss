
.content {
	min-height: 100vh;
	background: -webkit-linear-gradient(312deg, #FEC200 20%, #FE9A00 100%);
	background: linear-gradient(138deg, #FEC200 20%, #FE9A00 100%);
	padding: 0 50rpx 0 68rpx;
}
.top1 {
	padding: 84rpx 0 16rpx;
	font-size: 78rpx;
}
.top2 {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 24rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.top2>view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.top2>view>text:nth-of-type(1) {
	width: 8rpx;
	height: 8rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	background: #333333;
	margin-right: 16rpx;
}
.top3>view {
	-webkit-border-radius: 4px;
	        border-radius: 4px;
	background: #FFFFFF;
	margin-top: 32rpx;
	padding: 24rpx 32rpx;
	height: 88rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.top3>.phone {
	margin-top: 70rpx;
}
.top3>.code {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background: transparent;
	padding: 0;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.top3>.code>view {
	-webkit-border-radius: 4px;
	        border-radius: 4px;
	background: #FFFFFF;
	height: 88rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.top3>.code>view:nth-of-type(1) {
	padding: 24rpx 32rpx;
	margin-right: 16rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.top3>.code>view:nth-of-type(2) {
	font-size: 24rpx;
	padding: 28rpx 32rpx;
	color: #FA6400;
	text-align: center;
}
.top3>.btn {
	color: #FEAE00;
	background: #333333;
	text-align: center;
	margin-top: 30rpx;
}
.top4 {
	text-align: center;
	margin-top: 84rpx;
}
.top4,
.top5 {
	font-size: 24rpx;
}
.top5 {
	text-align: justify;
	padding: 0 0 18rpx;
}
.top5>view {
	margin-top: 32rpx;
}

